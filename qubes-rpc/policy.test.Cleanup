'''
Qubes Policy API test helper

It will clean after tests, regardless of any test failure.
'''

import fcntl
import os
import pathlib
import sys

import qubespolicy
POLICYPATH = pathlib.Path(qubespolicy.POLICY_DIR)

def main():
    lockfd = os.open(str(POLICYPATH), os.O_DIRECTORY)
    fcntl.flock(lockfd, fcntl.LOCK_EX)

    for policy in POLICYPATH.glob('**/policytest.*'):
        policy.unlink()

if __name__ == '__main__':
    sys.exit(main())
